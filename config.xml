<?xml version='1.0.1' encoding='utf-8'?>
<widget id="swipebox.reapairphone" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>repairmobile</name>
    <description>
        Phone Repair and buysell mobiles
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Raju Kuamr Sharma
    </author>
		<icon src="res/android/mipmap-hdpi/ic_launcher.png" platform="ios" width="57" height="57" density="hdpi" />
		<icon src="res/android/mipmap-mdpi/ic_launcher.png" platform="ios" width="57" height="57" density="mdpi" /> 
		<icon src="res/android/mipmap-xhdpi/ic_launcher.png" platform="ios" width="57" height="57" density="xhdpi" />
		<icon src="res/android/mipmap-xxhdpi/ic_launcher.png" platform="ios" width="57" height="57" density="xxhdpi" />
		<icon src="res/android/mipmap-xxxhdpi/ic_launcher.png" platform="ios" width="57" height="57" density="xxxhdpi" />
		
	<content src="index.html" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.3" />
	<access origin="https://swipebox.in*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
